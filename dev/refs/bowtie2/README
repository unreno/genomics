

for f in ../fasta/NC* ../fasta/GU* ../fasta/GQ* ../fasta/KF* ../fasta/EF* ../fasta/FJ* ../fasta/AY* ; do
b=$( basename $f .fasta )
echo $f $b
bowtie2-build $f $b
done



bowtie2-build $( ls /raid/refs/fasta/virii/*fasta | paste -sd "," ) virii


